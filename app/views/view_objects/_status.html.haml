    #title ステータス表示
    #rows
      #column 名前
      #column
        = link_to(character.name, '/character/status/' + character.type.to_s + '/' + character.id.to_s)
    #rows
      #column level
      #column
        = character.level
    #rows
      #column attack
      #column
        = character.status.attack
    #rows
      #column defense
      #column
        = character.status.defense
    #rows
