      #column
        = character.hp
        \/ #{character.hp_max}
        .battle-character-gauge-all
          .battle-character-gauge-current{:style => "width:#{character.hp_rate}px;"}
    #rows
      #column お金
      #column
        = character.rails
        rails
    #rows
      = link_to('装備整える', '/equipment/' + character.type.to_s + '/' + character.id.to_s)

